@model SnappetWorkApp.Models.Student

@{
    ViewData["Title"] = "Student Details";
}

<h3>Student Detail: @Model.Id</h3>

<p>List of Subjects</p>

<table class="table">
    <thead>
        <tr>
            <th>Subject</th>
            <th>Total Progress</th>
            <th>Average Difficulty</th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var subject in Model.Subjects) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => subject.Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => subject.TotalProgress)
            </td>
            <td>
                @Html.DisplayFor(modelItem => subject.AverageDifficulty)
            </td>
            <td>
                <a asp-controller="Subjects" asp-action="Details" asp-route-studentId="@Model.Id" asp-route-name="@subject.Name">Details</a>
            </td>
        </tr>
}
    </tbody>
</table>